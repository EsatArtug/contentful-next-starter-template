{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ninetailed/experience.js": ["packages/javascript/src/index.ts"],
      "@ninetailed/experience.js-next": ["packages/nextjs/src/index.ts"],
      "@ninetailed/experience.js-node": ["packages/nodejs/src/index.ts"],
      "@ninetailed/experience.js-plugin-google-analytics": [
        "packages/google-analytics/src/index.ts"
      ],
      "@ninetailed/experience.js-plugin-preview": [
        "packages/preview-plugin/src/index.ts"
      ],
      "@ninetailed/experience.js-plugin-segment": [
        "packages/segment/src/index.ts"
      ],
      "@ninetailed/experience.js-plugin-ssr": ["packages/ssr/src/index.ts"],
      "@ninetailed/experience.js-preview-bridge": [
        "packages/preview-bridge/src/index.ts"
      ],
      "@ninetailed/experience.js-react": ["packages/react/src/index.ts"],
      "@ninetailed/experience.js-shared": ["packages/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
